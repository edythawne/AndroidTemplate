<resources>

    <!-- Tema Base -->
    <style name="AppTheme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colores Primarios -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Color Primario Dark -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Colores Secundarios -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Colores de Acento -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Colores de Fondo-->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>

        <!-- Color de Superficies -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>

        <!-- Color de Errores-->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <!-- Colores de Texto -->
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_primary</item>
        <item name="actionMenuTextColor">@color/text_color_primary</item>

        <!-- Styles Add -->
        <item name="textInputStyle">@style/AppTheme.TextInputLayout</item>

        <!-- Dialog Theme -->
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

        <!-- Font Family -->
        <item name="fontFamily">@font/myfont</item>

        <!-- Fragment Settings Style -->
        <item name="preferenceTheme">@style/PreferenceSettings</item>
    </style>

    <!-- Toolbar & NavHeader Styles -->
    <style name="AppTheme.AppBar" parent="@style/ThemeOverlay.MaterialComponents" />

    <style name="AppTheme.Toolbar" parent="@style/ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.NavHeader" parent="@style/ThemeOverlay.MaterialComponents" />

    <!--  NavigationView Theme -->
    <style name="AppTheme.NavigationView" parent="@style/ThemeOverlay.MaterialComponents">
        <item name="colorPrimary">@color/colorNavigationPrimary</item>
        <item name="colorControlHighlight">@color/colorNavigationControlHighlight</item>
    </style>

    <!-- CardView Style -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardCornerRadius">@dimen/cardview_corner_radius</item>
        <item name="contentPadding">@dimen/cardview_spacing</item>
        <item name="android:layout_margin">@dimen/cardview_margin</item>
    </style>

    <!-- TextInputLayout Style -->
    <style name="AppTheme.CursorTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Colores para los textos del TextInputLayout -->
        <item name="hintTextColor">@color/colorHintText</item>
        <item name="android:textColorHint">@color/colorTextColorHint</item>

        <!-- Colores para el cursor -->
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorSecondary</item>
        <item name="android:layout_margin">@dimen/margin_padding</item>
    </style>

    <!-- TextInputLayout Theme -->
    <style name="AppTheme.TextInputLayout" parent="AppTheme.CursorTextInputLayout">
        <item name="boxStrokeColor">@color/colorBoxStrokeColor</item>
        <item name="boxBackgroundColor">@color/colorBoxBackgroundColor</item>
    </style>

    <!-- Button Style -->
    <style name="ButtonStyle" parent="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <!--  Extended Floating Action Button Style -->
    <style name="TextExtendedFloatingActionButton" parent="@style/Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <!-- MaterialDialog Styles -->
    <style name="AlertDialogTheme" parent="@style/Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/myfont</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="buttonBarPositiveButtonStyle">
            @style/Widget.MaterialComponents.Button.OutlinedButton
        </item>
    </style>

    <!-- FullScreenDialog -->
    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <!-- Colores Primarios -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Color Primario Dark -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Colores de Acento -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Floating -->
        <item name="android:windowIsFloating">false</item>

        <!-- Colores de Fondo-->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Colores de Texto -->
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:textColorSecondary">@color/text_color_primary</item>
        <item name="actionMenuTextColor">@color/text_color_primary</item>
    </style>

    <!-- Settings Fragment Theme -->
    <style name="PreferenceSettings" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/PreferenceSettingsStyle</item>
    </style>

    <!-- Settings Fragment Theme -->
    <style name="PreferenceSettingsStyle" parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <!-- TextView Font Style -->
    <style name="MyFontTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/myfont</item>
        <item name="android:textColor">@color/colorPrimaryVariant</item>
    </style>

</resources>